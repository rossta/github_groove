<h1>Github/Groove</h1>

<% if signed_in? %>
  <p>
    Welcome, <%= current_user.display_name %> | <%= link_to "Sign out", "/auth/signout" %>
  </p>

  <% if !current_user.project %>
    <p>
      <%= link_to "Connect to Groove", "/project" %>
    </p>
  <% end %>
<% else %>
  <p>
    <%= link_to "Sign in with Github", "/auth/github" %>
  </p>
<% end %>
